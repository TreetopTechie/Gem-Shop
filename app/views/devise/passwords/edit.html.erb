<section class="bg-white">

  <div class="container mx-auto flex items-center flex-wrap pb-12 border-t">
    <div class="w-[500px] p-8 mx-auto flex flex-col items-center text-sm">
      <div class="font-bold text-lg">Change your password</div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="field mt-4">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "text-sm w-64 h-8 rounded-lg" %>
        </div>
      
        <div class="field mt-4">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-sm w-64 h-8 rounded-lg" %>
        </div>
      
        <div class="actions mt-4">
          <%= f.submit "Change my password", class: "hover:bg-zinc-100 cursor-pointer px-3 py-1 rounded-lg border border-zinc-700" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>
