<section class="bg-white">

  <div class="container mx-auto flex items-center flex-wrap pb-12 border-t">
    <div class="w-[500px] p-8 mx-auto">
      <div class="font-bold">Posting as <%= current_user.firstname %> <%= current_user.lastname %></div>
      <div class="mt-4">
        <%= form_with model: @review, url: reviews_create_path, local: true do |f| %>
          <div>
            <%= f.label :rating, "Rating (1 worst - 5 best)" %><br>
            <%= f.select :rating, options_for_select((1..5).map { |n| [n, n] }), {}, required: true, class: "text-sm h-8 rounded-lg" %>
    
          </div>
    
          <div class="mt-4">
            <%= f.label :body, "Review" %><br>
            <%= f.text_area :body, required: true, class: "text-sm w-64 h-64 rounded-lg" %>
          </div>
    
          <div>
            <%= f.submit "Post Review", class: "hover:bg-zinc-100 cursor-pointer px-3 py-1 rounded-lg border border-zinc-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
